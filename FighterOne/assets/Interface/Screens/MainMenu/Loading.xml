<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- Loading screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <style id="font16">
        <attributes font="aurulent-sans-16.fnt" color="#ffff"/>
    </style>
    <controlDefinition name = "loadingBar" controller = "sg.atom.ui.common.UILoadingBarController">
        <image filename="Interface/Screens/MainMenu/Images/Loading/border1.png" childLayout="absolute" 
               imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15">
            <image id="progressbar" x="0" y="0" filename="Interface/Screens/MainMenu/Images/Loading/inner1.png" width="32px" height="100%"
                   imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15" />
        </image>
    </controlDefinition>
    
    <screen id="loadingScreen" controller="sg.atom.ui.common.UILoadingScreenController">
        <layer id="layer" childLayout="center" backgroundImage="Interface/Screens/MainMenu/Images/bg/MainMenu2.png">
            <panel id="panel" height="140px" width="350px" align="center" valign="center" style="nifty-panel" childLayout="vertical">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                </effect>
                <control id="loadingBar" name="loadingBar" align="center" valign="center" width="100%" height="25px" />
                <text style="nifty-label" text=""/>
                <text style="font16" id="loadingText"  text="Loading..." align="center" valign="center" />
            </panel>
        </layer>
    </screen>
</nifty>
